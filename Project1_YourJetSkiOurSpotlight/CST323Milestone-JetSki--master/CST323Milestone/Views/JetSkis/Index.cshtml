@model IEnumerable<CST323Milestone.Models.JetSkiModel>

<div class="center-div">
	<div class="jetski-container">
		<div class="title">
			<h1>Jet Skis</h1>
		</div>


		<div class="center-div">
			<a asp-action="ShowAddForm" class="btn btn-primary">Create New JetSki</a>
		</div>

		<div class="container d-flex flex-wrap center-div">
			@foreach (var item in Model)
			{
				<div class="card" style="width: 20rem; margin:5px;">
					<div class="card-body">
						<img src="@item.Image" class="card-img-top" />
						<h2 class="card-title">@item.Make</h2>
						<h3 class="card-title">@item.Model</h3>
						<h5 class="card-title">Color: @item.Color</h5>
						<h5 class="card-title">Year: @item.Year</h5>
						<h5 class="card-title">Price: $@item.Price</h5>

						<a href="/JetSkis/ShowEditForm/@item.Id" class="btn btn-success">Edit</a>
						<button class="delete-link btn btn-danger fix">@Html.ActionLink("Delete", "DeleteJetSki", new { id = item.Id }, new { @class = "delete-link", onclick = "return confirm('Are you sure you want to delete this record?')" })</button>

					</div>

				</div>
			}
		</div>
	</div>
</div>



